<% include ../admin-head %>
<body class="theme-green">
    <!-- Page Loader -->
    <% include ../admin-page-loader %>
    <!-- #END# Page Loader -->
    <!-- Overlay For Sidebars -->
    <div class="overlay"></div>
    <!-- #END# Overlay For Sidebars -->
    <!-- Top Bar -->
    <% include ../top-nav %>
    <!-- #Top Bar -->
    <section>
        <!-- Left Sidebar -->
        <% include ../admin-left-sidebar %>
        <!-- #END# Left Sidebar -->
        <!-- Right Sidebar -->
        <% include ../admin-right-sidebar %>
        <!-- #END# Right Sidebar -->
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="block-header">
                <h2 class="center">Agricultural Learning Information</h2>
            </div>
            <!-- about section Form -->
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <small>Fill the form below to post an information.</small>
                        </div>
                        <div class="body">
                            <!-- message -->
                            <% include ../messages %> 
                            <!-- end of message -->
                            <form method="POST" action="/admin/learning-info" id="aboutDisplayForm">
                                <div class="row">
                                    <div class="container">
                                      <div class="row">
                                        <div class="input-field col s12 m10">
                                            <label for="info_heading">Title</label>
                                            <input type="text" name="info_heading" value="">
                                        </div>
                                        <div class="input-field col s12 m12">
                                            <label for="info_content">Info Content goes here...</label>
                                            <textarea class="materialize-textarea" type="text" name="info_content"></textarea>
                                        </div>
                                      </div>
                                      <input class="btn-small btn-enum blue" type="submit" value="POST">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- about section Form -->
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="block-header">
                <h2 class="center">Learning Materials Table</h2>
            </div>
            <!-- learning materials table -->
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <small>
                                Showing all the list of learning materials
                            </small>
                        </div>
                        <div class="body">
                            <div class="table-responsive">
                                <!-- messages -->
                                <% include ../messages %>
                                <!-- end of messages -->
                                <table class="table table-bordered table-striped table-hover dataTable">
                                    <thead>
                                        <tr>
                                            <th>TITLE</th>
                                            <th>DESCRIPTION</th>
                                            <th>ACTIONS</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>TITLE</th>
                                            <th>DESCRIPTION</th>
                                            <th>ACTIONS</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        <!-- looping through the enumerator -->
                                        <% learningInfo.forEach(data => {%>
                                        <tr>
                                            <td><%= data.title %></td>
                                            <td><%= data.content %></td>
                                            <td>
                                                <div class="row">
                                                    <a href="/admin/learning-info/edit/<%= data._id %>" class="btn btn-warning">Edit</a>
                                                    <a href="/admin/learning-info/delete/<%= data._id %>" class="btn btn-danger">Delete</a>
                                                </div>
                                            </td>
                                        </tr>
                                        <%});%>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #END# learning materials table -->
        </div>
    </section>

    <% include ../admin-jslinks.ejs %>
  </body>

  </html>
